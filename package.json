{
  "name": "ts-path-alias-fix",
  "version": "0.1.2",
  "type": "module",
  "description": "Enforces and fixes path aliases in TypeScript projects",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adamhl8/ts-path-alias-fix.git"
  },
  "homepage": "https://github.com/adamhl8/ts-path-alias-fix",
  "bugs": {
    "url": "https://github.com/adamhl8/ts-path-alias-fix/issues"
  },
  "author": {
    "email": "adamhl@pm.me",
    "name": "Adam Langbert",
    "url": "https://github.com/adamhl8"
  },
  "license": "MIT",
  "bin": {
    "ts-path-alias-fix": "./dist/index"
  },
  "files": ["dist/"],
  "keywords": ["typescript", "path alias", "path aliases", "lint"],
  "scripts": {
    "bundle": "bun lint && tsdown",
    "lint": "markdown-toc -i --bullets '-' --maxdepth 3 ./README.md && bun ./src/index.ts -w && tsc --noEmit && biome check --write && adamhl8-knip",
    "prepare": "find .githooks -type f -exec ln -srf {} .git/hooks/ \\; || true",
    "release": "release-it"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@optique/core": "^0.9.2",
    "@optique/run": "^0.9.2",
    "get-tsconfig": "^4.13.6",
    "picocolors": "^1.1.1",
    "ts-explicit-errors": "^4.1.1"
  },
  "devDependencies": {
    "@adamhl8/configs": "^0.18.3",
    "@biomejs/biome": "^2.3.14",
    "@types/bun": "^1.3.8",
    "knip": "^5.83.1",
    "markdown-toc": "^1.2.0",
    "publint": "^0.3.17",
    "release-it": "^19.2.4",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3"
  }
}
